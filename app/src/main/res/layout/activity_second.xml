<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="badramoni.avinash.cratisspace.wewriteone.SecondActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="274dp"
            android:layout_height="111dp"
            android:layout_margin="20dp"
            android:fontFamily="monospace"
            android:text="Best app to complete your record works and project works."
            android:textAlignment="viewStart"
            android:textSize="14sp" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="216dp"
            android:layout_height="224dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="done.json"
            app:lottie_loop="true" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/help"
        android:layout_width="63dp"
        android:layout_height="28dp"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="27dp"
        android:text="Help"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/record"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="60dp"
        android:text="Records"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/update"
        app:layout_constraintStart_toEndOf="@+id/help" />

    <TextView
        android:id="@+id/update"
        android:layout_width="72dp"
        android:layout_height="26dp"
        android:layout_marginBottom="67dp"
        android:layout_marginEnd="16dp"
        android:text="updates"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>